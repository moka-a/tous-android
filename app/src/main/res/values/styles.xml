<resources>

	<!-- Base application theme. -->
	<style name="Theme" parent="Theme.AppCompat.Light">

	</style>

	<!-- Widget.Tous.PopupMenu -->
	<style name="Widget.Tous.PopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
		<item name="android:dropDownSelector">?popupItemBackground</item>
	</style>

	<!-- Widget.Tous.SearchView -->
	<style name="Widget.Tous.SearchView" parent="Widget.AppCompat.SearchView"/>

	<!-- Widget.Tous.ActionBar -->
	<style name="Widget.Tous.ActionBar" parent="ThemeOverlay.AppCompat.Dark">
		<item name="actionMenuTextColor">@color/white</item>
		<item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
	</style>

	<!-- Divider -->
	<style name="VerticalDivider">
		<item name="android:layout_width">1px</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:background">#FFCCCCCC</item>
	</style>

	<style name="HorizontalDivider">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1px</item>
		<item name="android:background">@color/fragment_setting_listview_divider</item>
	</style>

</resources>
