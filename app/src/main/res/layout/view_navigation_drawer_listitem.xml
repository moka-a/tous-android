<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="48dp">

	<LinearLayout
		android:id="@+id/linearLayout_settingDetail"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:background="@drawable/selector_background_drawer_listitem_function"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:paddingBottom="8dp"
		android:paddingLeft="12dp"
		android:paddingRight="12dp"
		android:paddingTop="8dp">

		<ImageView
			android:id="@+id/imageView_detailIcon"
			android:layout_width="32dp"
			android:layout_height="32dp"
			android:layout_marginRight="12dp"
			android:adjustViewBounds="true"
			android:padding="4dp"
			android:scaleType="centerInside"
			android:visibility="gone"/>

		<TextView
			android:id="@+id/textView_detailTitle"
			android:layout_width="0dp"
			android:layout_height="32dp"
			android:layout_weight="1"
			android:gravity="center_vertical"
			android:singleLine="true"
			android:textColor="#FF808080"
			android:textSize="16dp"
			android:text="ddd"/>

	</LinearLayout>

	<View
		android:id="@+id/horizontalDivider_top"
		android:layout_gravity="top"
		android:visibility="gone"
		style="@style/HorizontalDivider"/>

	<View
		android:id="@+id/horizontalDivider_bottom"
		android:layout_gravity="bottom"
		android:visibility="gone"
		style="@style/HorizontalDivider"/>

</FrameLayout>