<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/web_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:baselineAligned="false"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0" >

        <FrameLayout
            android:id="@+id/frameLayout_webViewContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="48dp" />

        <ProgressBar
            android:id="@+id/progressBar_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentTop="true"
            android:indeterminateOnly="false"
            android:max="100" />

        <TextView
            android:id="@+id/web_view_market_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="48dp"
            android:background="@color/white"
            android:gravity="center"
            android:padding="20dp"
            android:textColor="#FF666666"
            android:textSize="15dp"
            android:visibility="gone" />
    </RelativeLayout>

    <View style="@style/HorizontalDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <ImageButton
            android:id="@+id/imageButton_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_weight="1.0"
            android:background="@color/transparency"
            android:src="@drawable/ic_up" />

        <ImageButton
            android:id="@+id/imageButton_forward"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@color/transparency"
            android:src="@drawable/ic_up" />

        <FrameLayout
            android:id="@+id/frameLayout_refresh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/imageView_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/transparency"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:src="@drawable/ic_up"
                android:visibility="invisible" />

            <ProgressBar
                android:id="@+id/progressBar_loading"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:visibility="visible" />
        </FrameLayout>

        <ImageView
            android:id="@+id/imageView_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@color/transparency"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/ic_up" />
    </LinearLayout>

</LinearLayout>