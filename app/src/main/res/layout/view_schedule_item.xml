<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/linearLayout_spot"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="80dp"
	android:background="@drawable/selector_background_plan_list_listitem_function"
	android:orientation="horizontal">

	<TextView
		android:id="@+id/textView_time"
		android:layout_width="35dp"
		android:layout_height="wrap_content"
		android:layout_marginLeft="2dp"
		android:layout_marginTop="10dp"
		android:gravity="end"
		android:text="6:00"
		android:textColor="#FF999999"
		android:textSize="12sp"/>

	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="match_parent">

		<View
			android:id="@+id/view_divider"
			style="@style/VerticalDivider"
			android:layout_marginLeft="20dp"/>

		<ImageView
			android:id="@+id/imageView_dot"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:scaleType="centerCrop"/>

	</RelativeLayout>

	<LinearLayout
		android:id="@+id/linearLayout_parentBody"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginBottom="5dp"
		android:layout_marginTop="5dp"
		android:orientation="vertical"
		android:paddingLeft="4dp">

		<TextView
			android:id="@+id/textView_spotName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ellipsize="marquee"
			android:singleLine="true"
			android:gravity="center_vertical"
			android:marqueeRepeatLimit="3"
			android:textSize="16dp"/>

		<TextView
			android:id="@+id/textView_spotContent"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_marginTop="4dp"
			android:layout_weight="1"
			android:maxLines="3"
			android:textColor="#FF999999"
			android:textSize="10dp"/>

		<View
			style="@style/HorizontalDivider"
			android:layout_marginRight="8dp"/>

	</LinearLayout>

</LinearLayout>