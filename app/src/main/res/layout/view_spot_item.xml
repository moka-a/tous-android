<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/linearLayout_spot"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="65dp"
	android:background="@drawable/selector_background_plan_list_listitem_function"
	android:orientation="vertical">

	<View style="@style/HorizontalDivider"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="65dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/imageView_spotImage"
			android:layout_width="100dp"
			android:layout_height="65dp"
			android:layout_marginRight="20dp"
			android:background="#FFffcdd2"
			android:scaleType="centerInside"
			android:src="@drawable/ic_tab_spot"/>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="50dp"
			android:layout_gravity="center_vertical"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:id="@+id/textView_spotName"
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:ellipsize="marquee"
				android:gravity="center_vertical"
				android:marqueeRepeatLimit="3"
				android:singleLine="true"
				android:textSize="18dp"/>

			<TextView
				android:id="@+id/textView_dayCount"
				android:layout_width="match_parent"
				android:layout_height="20dp"
				android:gravity="center_vertical"
				android:singleLine="true"
				android:textSize="12dp"/>

		</LinearLayout>

		<ImageView
			android:id="@+id/imageView_setTime"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:scaleType="centerInside"
			android:src="@drawable/selector_spot_item_set_time"/>

	</LinearLayout>

</LinearLayout>